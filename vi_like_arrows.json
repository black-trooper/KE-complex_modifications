{
    "title": "Vi like Arrows",
    "rules": [
        {
            "description": "control + i/j/k/l to arrow keys, etc)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ],
                            "optional": [
                                "caps_lock",
                                "option",
                                "command",
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "k",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ],
                            "optional": [
                                "caps_lock",
                                "option",
                                "command",
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "down_arrow"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "i",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ],
                            "optional": [
                                "caps_lock",
                                "option",
                                "command",
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "up_arrow"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ],
                            "optional": [
                                "caps_lock",
                                "option",
                                "command",
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_arrow"
                        }
                    ]
                }
            ]
        },
        {
            "description": "control + m/, to enter/back_space",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "m",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ],
                            "optional": [
                                "caps_lock",
                                "option",
                                "command",
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "return_or_enter"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "comma",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ],
                            "optional": [
                                "caps_lock",
                                "option",
                                "command",
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "delete_or_backspace"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Disable capslock, up, down, left, right",
            "manipulators": [
                {
                    "from": {
                        "key_code": "caps_lock"
                    },
                    "to": [
                        {
                            "key_code": "vk_none"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "up_arrow"
                    },
                    "to": [
                        {
                            "key_code": "vk_none"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "down_arrow"
                    },
                    "to": [
                        {
                            "key_code": "vk_none"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "left_arrow"
                    },
                    "to": [
                        {
                            "key_code": "vk_none"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "right_arrow"
                    },
                    "to": [
                        {
                            "key_code": "vk_none"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
